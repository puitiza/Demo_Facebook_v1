<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.anthony.facebook.Activities.MainActivity">

   <ImageView
       android:id="@+id/imgAvatar"
       android:layout_width="match_parent"
       android:layout_height="250dp"
       android:layout_marginTop="20dp"/>
   <TextView
       android:id="@+id/txt_name"
       android:layout_marginTop="20dp"
       android:gravity="center"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
   <TextView
       android:id="@+id/txt_Email"
       android:gravity="center"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
   <TextView
       android:id="@+id/txt_Cumple"
       android:gravity="center"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
   <TextView
       android:id="@+id/txt_Friend"
       android:gravity="center"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
   <Button
       android:id="@+id/button_shareContent"
       android:layout_gravity="center"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Share Content"/>
   <Button
       android:id="@+id/btn_imageShare"
       android:layout_gravity="center"
       android:layout_width="180dp"
       android:layout_height="45dp"
       android:background="@drawable/share_image" />
   <Button
       android:id="@+id/logout"
       android:text="@string/logout"
       android:layout_gravity="center"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

</LinearLayout>
